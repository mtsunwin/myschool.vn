<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_avatar_updateSalary"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_fullname_updateSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_chucvu_updateSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:text="Chức vụ" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_updateSalary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="end|center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_updateSalary"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/ic_attach_money_black_24dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>